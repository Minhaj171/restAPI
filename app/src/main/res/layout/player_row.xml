<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
            <variable
                name="player"
                type="com.example.restapi.model.PlayerInformation" />
            <variable
                name="exception"
                type="String" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false">

            <RelativeLayout
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/continents_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/continents_tittle"
                        style="@style/TextAppearance.MaterialComponents.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="First name: " />

                    <TextView
                        android:id="@+id/first_name"
                        style="@style/TextAppearance.MaterialComponents.Body2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_toEndOf="@+id/continents_tittle"
                        android:text="@{player.firstName!=null? player.firstName.empty? exception:player.firstName:exception}" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/continents_id_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/continents_container"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/continents_id_tittle"
                        style="@style/TextAppearance.MaterialComponents.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full name" />

                    <TextView
                        android:id="@+id/full_name"
                        style="@style/TextAppearance.MaterialComponents.Body2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_toEndOf="@+id/continents_id_tittle"
                        android:text="@{player.fullName!=null? player.fullName.empty? exception:player.fullName:exception}" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/continents_name_container"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/continents_id_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/continents_name_tittle"
                        style="@style/TextAppearance.MaterialComponents.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date of birth: " />

                    <TextView
                        android:id="@+id/date_of_birth"
                        style="@style/TextAppearance.MaterialComponents.Body2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_toEndOf="@+id/continents_name_tittle"
                        android:text="@{player.dateOfBirth!=null? player.dateOfBirth.empty? exception:player.dateOfBirth:exception}" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/continents_name_container"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/continents_time_tittle"
                        style="@style/TextAppearance.MaterialComponents.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender: " />

                    <TextView
                        android:id="@+id/gender"
                        style="@style/TextAppearance.MaterialComponents.Body2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_toEndOf="@+id/continents_time_tittle"
                        android:text="@{player.gender!=null? player.gender.empty? exception:player.gender:exception}" />


                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/batsman_icon_container"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/batsman_icon"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:elevation="12dp"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="40dp"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    android:thicknessRatio="1.9">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:id="@+id/imageView1"
                        android:playerIcon="@{player.playerIcon}" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/batsman_position"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/batsman_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="@{player.position.get(0).name}" />



            </RelativeLayout>




        </LinearLayout>


    </androidx.cardview.widget.CardView>

</layout>